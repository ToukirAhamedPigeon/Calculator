<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:stretchColumns="1"
    android:layout_marginTop="10dip"
    >
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       >

        <TextView
            android:id="@+id/myText"
            android:paddingTop="20dip"
            android:paddingRight="5dip"
            android:paddingLeft="5dip"
            android:gravity="center|right"
            android:textSize="40sp"
            android:textColor="#373738"
            android:textStyle="bold"
            android:layout_width="500dip"
            android:layout_height="95dip"
            android:layout_marginBottom="10dip"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="10dip"
            android:layout_span="4"
            android:background="#c4d1f5"
            android:text="0" />
    </TableRow>
    <TableRow android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip">

        <Button
            android:id="@+id/buttonHistoryPlus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="H+"
            android:textSize="20sp"
            android:layout_span="2"
            android:onClick="pressHPlus"/>


        <Button
            android:id="@+id/buttonHistoryMinus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="H-"
            android:textSize="20sp"
            android:layout_span="2"
            android:onClick="pressHMinus"/>

    </TableRow>
    <TableRow android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip">

        <Button
            android:id="@+id/buttonMPlus"
            android:layout_width="wrap_content"
            android:layout_height="65dip"
            android:text="M+"
            android:textSize="20sp"
            android:onClick="pressMPlus"/>

        <Button
            android:id="@+id/buttonMMinus"
            android:layout_width="wrap_content"
            android:layout_height="65dip"
            android:text="M-"
            android:textSize="20sp"
            android:onClick="pressMMinus"/>
        <Button
            android:id="@+id/buttonClear"
            android:layout_width="wrap_content"
            android:layout_height="65dip"
            android:text="C"
            android:textSize="20sp"
            android:onClick="pressClear"/>

        <Button
            android:id="@+id/buttonDivision"
            android:layout_width="wrap_content"
            android:layout_height="65dip"
            android:text="/"
            android:textSize="20sp"
            android:onClick="pressDivision"/>
    </TableRow>
    <TableRow android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip">

        <Button
            android:id="@+id/buttonSeven"
            android:layout_width="wrap_content"
            android:layout_height="65dip"
            android:text="7"
            android:textSize="20sp"
            android:onClick="pressSeven"/>

        <Button
            android:id="@+id/buttonEight"
            android:layout_width="wrap_content"
            android:layout_height="65dip"
            android:text="8"
            android:textSize="20sp"
            android:onClick="pressEight"/>

        <Button
            android:id="@+id/buttonNine"
            android:layout_width="wrap_content"
            android:layout_height="65dip"
            android:text="9"
            android:textSize="20sp"
            android:onClick="pressNine"/>

        <Button
            android:id="@+id/buttonMulti"
            android:layout_width="wrap_content"
            android:layout_height="65dip"
            android:text="*"
            android:textSize="20sp"
            android:onClick="pressMulti"/>
    </TableRow>
    <TableRow android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip">

        <Button
            android:id="@+id/buttonFour"
            android:layout_width="wrap_content"
            android:layout_height="65dip"
            android:text="4"
            android:textSize="20sp"
            android:onClick="pressFour" />

        <Button
            android:id="@+id/buttonFive"
            android:layout_width="wrap_content"
            android:layout_height="65dip"
            android:text="5"
            android:textSize="20sp"
            android:onClick="pressFive" />

        <Button
            android:id="@+id/buttonSix"
            android:layout_width="wrap_content"
            android:layout_height="65dip"
            android:text="6"
            android:textSize="20sp"
            android:onClick="pressSix"/>

        <Button
            android:id="@+id/buttonMinus"
            android:layout_width="wrap_content"
            android:layout_height="65dip"
            android:text="-"
            android:textSize="20sp"
            android:onClick="pressMinus"/>
    </TableRow>
    <TableRow android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip">

        <Button
            android:id="@+id/buttonOne"
            android:layout_width="wrap_content"
            android:layout_height="65dip"
            android:text="1"
            android:textSize="20sp"
            android:onClick="pressOne"/>

        <Button
            android:id="@+id/buttonTwo"
            android:layout_width="wrap_content"
            android:layout_height="65dip"
            android:text="2"
            android:textSize="20sp"
            android:onClick="pressTwo"/>

        <Button
            android:id="@+id/buttonThree"
            android:layout_width="wrap_content"
            android:layout_height="65dip"
            android:text="3"
            android:textSize="20sp"
            android:onClick="pressThree"/>

        <Button
            android:id="@+id/buttonPlus"
            android:layout_width="wrap_content"
            android:layout_height="65dip"
            android:text="+"
            android:textSize="20sp"
            android:onClick="pressPlus"/>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip">

        <Button
            android:id="@+id/buttonPercent"
            android:layout_width="wrap_content"
            android:layout_height="65dip"
            android:text="%"
            android:textSize="20sp"
            android:onClick="pressPercent"/>

        <Button
            android:id="@+id/buttonZero"
            android:layout_width="wrap_content"
            android:layout_height="65dip"
            android:text="0"
            android:textSize="20sp"
            android:onClick="pressZero"/>

        <Button
            android:id="@+id/buttonDecimal"
            android:layout_width="wrap_content"
            android:layout_height="65dip"
            android:text="."
            android:textSize="20sp"
            android:onClick="pressDecimal"/>

        <Button
            android:id="@+id/buttonEqual"
            android:layout_width="wrap_content"
            android:layout_height="65dip"
            android:text="="
            android:textSize="20sp"
            android:onClick="pressEqual"/>
    </TableRow>
    </TableLayout>
